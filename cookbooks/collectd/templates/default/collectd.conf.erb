# send to graphite
LoadPlugin write_graphite
<Plugin write_graphite>
  <Node "unwiredcouch">
    Host "<%= @graphite_host || "graphite.unwiredcouch.com" %>"
    Port "2003"
    Protocol "tcp"
    LogSendErrors true
    Prefix "collectd."
  </Node>
</Plugin>

# disk space
<% node[:filesystem].each do |fs| -%>
<Plugin "df">
  Device "<%= fs[0] %>"
  MountPoint "<%= fs[1][:mount] %>"
  FSType "<%= fs[1][:fs_type] %>"
  IgnoreSelected false
  ReportReserved false
  ReportInodes false
</Plugin>
<% end -%>
