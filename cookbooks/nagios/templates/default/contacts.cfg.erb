define contact{
        contact_name  mrtazz    ; Short name of user
        use           generic-contact   ; Inherit default values from generic-contact template (defined above)
        alias         Daniel    ; Full name of user
        email         d@unwiredcouch.com  ; <<***** CHANGE THIS TO YOUR EMAIL ADDRESS ******
        }

define contact{
        contact_name  mrtazz_pushover   ; Short name of user
        use           generic-pushover-contact    ; Inherit default values from generic-contact template (defined above)
        alias         Daniel    ; Full name of user
        email         <%= @mrtazz_pushover_id %>  ; <<***** CHANGE THIS TO YOUR EMAIL ADDRESS ******
        }


define contact {
        contact_name                             slack
        alias                                    Slack
        service_notification_period              24x7
        host_notification_period                 24x7
        service_notification_options             w,u,c,r
        host_notification_options                d,r
        service_notification_commands            notify-service-by-slack
        host_notification_commands               notify-host-by-slack
        }

define contactgroup{
        contactgroup_name       admins
        alias                   Nagios Administrators
        members                 mrtazz,mrtazz_pushover,slack
        }
