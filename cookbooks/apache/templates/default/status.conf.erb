ExtendedStatus On
<VirtualHost *:80>
    ServerName <%= @hostname %>
    ServerAlias localhost
    <Location /server-status>
        SetHandler server-status
        Order deny,allow
        Deny from all
        Allow from ::1 127.0.0.1 <%= node[:ipaddress] %>
    </Location>

    <Location /server-info>
        SetHandler server-info
        Order deny,allow
        Deny from all
        Allow from ::1 127.0.0.1 <%= node[:ipaddress] %>
    </Location>
</VirtualHost>
