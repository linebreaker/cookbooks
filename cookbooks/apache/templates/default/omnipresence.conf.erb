<VirtualHost *:443>
    ServerName ssl.unwiredcouch.com
    SSLEngine On
    SSLCertificateFile "/usr/local/etc/apache22/ssl.cert"
    SSLCertificateKeyFile "/usr/local/etc/apache22/ssl.key"
    DavLockDB <%= @davroot %>/DavLock

    DocumentRoot <%= @davroot %>
    <Directory <%= @davroot %>>
    </Directory>

    Alias /webdav <%= @davroot %>

    <Location /webdav>
      DAV On
      AuthType Basic
      AuthName "Omnipresence"
      AuthUserFile <%= @davroot %>/passwd.dav
      Require valid-user
      Options FollowSymLinks Indexes
      AllowOverride None
      Order allow,deny
      Allow from all
    </Location>
</VirtualHost>
